<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/windowBackground"
    android:weightSum="1">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="30dp"
        android:gravity="top|center"
        android:layout_marginTop="30dp"
        android:textColor="@color/colorPrimary"
        android:textStyle="bold"
        android:text="Quem é você?" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="174dp"
        android:orientation="horizontal"
        android:weightSum="1"
        android:gravity="center|center_vertical"
        android:layout_marginTop="50dp">

        <ImageView
            android:id="@+id/img_ong"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_gravity="left"
            android:src="@drawable/ong_handshake"
            android:clickable="true"/>

        <ImageView
            android:id="@+id/img_contributor"
            android:layout_width="160dp"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:padding="10dp"
            android:src="@drawable/contributor_team"
            android:clickable="true"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/txt_ong"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:textSize="19dp"
            android:textColor="@color/colorSecundaryPink"
            android:textStyle="bold"
            android:text="Organização" />

        <TextView
            android:id="@+id/txt_contributor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:layout_marginLeft="45dp"
            android:text="Colaborador"
            android:textColor="@color/colorSecundaryPink"
            android:textStyle="bold"
            android:textSize="22dp" />
    </LinearLayout>

</LinearLayout>